<UserControl x:Class="UITest.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UITest" xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <hc:SplitButton Margin="270,180,410,0" Style="{StaticResource  SplitButtonInfo}" Command="{Binding SelectCmd}" CommandParameter="Command0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <hc:SplitButton.DropDownContent>
                <StackPanel>
                    <MenuItem  Command="{Binding SelectCmd}" CommandParameter="Command1"/>
                    <MenuItem  Command="{Binding SelectCmd}" CommandParameter="Command2"/>
                    <MenuItem Header="111" Command="{Binding SelectCmd}" CommandParameter="Command3"/>
                </StackPanel>
            </hc:SplitButton.DropDownContent>
        </hc:SplitButton>
    </Grid>
</UserControl>
